#include <stdio.h>

float soma(float n1, float n2, float n3){
  return n1 + n2 + n3;
}
int main(){
float n1, n2, n3;
  printf("Digite um número: ");
  scanf("%f", &n1);
  printf("Digite outro número: ");
  scanf("%f", &n2);
  printf("Digite um último número: ");
  scanf("%f", &n3);
  printf("Soma = %.1f\n", soma(n1, n2, n3));

return 0;

}


