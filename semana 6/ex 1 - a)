#include <stdio.h>
//Ex 1 
//a)
int verifica_Maior(int linhas, int colunas, int matriz[linhas][colunas]){
  int maior_numero = matriz[0][0];
  int i, j;
  for(i = 0; i < linhas; i++){
    for(j = 0; j < colunas; j++){
      if(matriz[i][j] > maior_numero){
        maior_numero = matriz[i][j]; 
      }
    }
  }
  return maior_numero;
}

int main() {
  int linhas, colunas;


  //recebe numero de linhas e colunas 
  printf("numero de linhas: ");
  scanf("%d", &linhas);
  printf("numero de colunas: ");
  scanf("%d", &colunas);

  int m[linhas][colunas], i, j;

  //recebe a matriz
  for(i = 0; i < linhas; i++) {
    for(j = 0; j < colunas; j++) {
      scanf("%d", &m[i][j]);
    }
  } 
  //imprimi a matriz
  for(i = 0; i < linhas; i++){
    for(j = 0; j < colunas; j++){
      printf("[%d]", m[i][j]);
    }
   printf("\n");	  
  }
  int maior = verifica_Maior(linhas, colunas, m);
  printf("maior numero da matriz: %d", maior);
  return 0;
}
