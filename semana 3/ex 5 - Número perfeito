#include <stdio.h>
#include <stdlib.h>

int main(){
  int num;
  int soma = 0; 
  int i;
  printf("Digite um número inteiro:");
  scanf("%d", &num);
  for (i = 1; i < num; i++){
    if(num % i == 0){
      soma += i;
    }
  }
  if(soma == num){
    printf("O número %d é um número perfeito!\n", num);
  }
  else{
    printf("O número %d não é um número perfeito!\n", num);
  }
return 0;
}
